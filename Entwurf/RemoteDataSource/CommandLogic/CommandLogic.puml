	class CommandToJSON <<interface>> {
		+JSON convert(Command)
	}

	class TableCommandToJSON <<singleton>> {
		+JSON convert(Command)
	}

	class TemplateCommandToJSON <<singleton>> {
		+JSON convert(Command)	
	}

	class PostCommandToJSON <<singleton>> {	
		+JSON convert(Command)
	}

	class UserCommandToJSON <<singleton>> {
		+JSON convert(Command)
	}
}

package JSONToCommand {
	'strategy
	class JSONToCommand <<interface>> {
    	+Command convert(JSON)
	}

    class JSONToTableCommand <<singleton>> {
